# Django Settings
# Copy this file to .env and fill in your values

# SECURITY WARNING: keep the secret key used in production secret!
# Generate a new secret key with: python -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())'
DJANGO_SECRET_KEY=your-secret-key-here-change-me

# SECURITY WARNING: don't run with debug turned on in production!
# Set to False in production
DJANGO_DEBUG=True

# Comma-separated list of allowed hosts
# Example: localhost,127.0.0.1,yourdomain.com
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1

# CORS Settings
# Comma-separated list of allowed origins
# Example: http://localhost:8000,http://127.0.0.1:8000
CORS_ALLOWED_ORIGINS=http://localhost:8000,http://127.0.0.1:8000

# Database Path
# Path to the SQLite database file (relative to webapp directory)
BTC_DB_PATH=../btc_eur_data.db

# Logging Level
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Binance API Keys (READ-ONLY)
# SECURITY WARNING: Never commit your actual API keys to Git!
# Get your API keys from: https://www.binance.com/en/my/settings/api-management
# Required permissions: Read-only (Enable Reading)
# DO NOT enable: Enable Spot & Margin Trading, Enable Futures, Enable Withdrawals
BINANCE_API_KEY=your-binance-api-key-here
BINANCE_API_SECRET=your-binance-api-secret-here
